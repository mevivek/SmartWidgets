<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartImageView">
        <attr format="enum" name="shape">
            <enum name="square" value="1"/>
            <enum name="rectangle" value="2"/>
            <enum name="circle" value="3"/>
        </attr>
        <attr format="string" name="imageUrl"/>
        <attr format="reference" name="imagePlaceholder"/>
        <attr format="integer" name="widthRatio"/>
        <attr format="integer" name="heightRation"/>
        <attr format="color" name="strokeColor"/>
        <attr format="dimension" name="strokeWidth"/>
        <attr format="boolean" name="highlightEnabled"/>
        <attr format="color" name="highlightColor"/>
        <attr format="string" name="text"/>
        <attr format="color" name="textColor"/>
        <attr format="dimension" name="textSize"/>
        <attr format="color" name="avatarBackgroundColor"/>
        <attr format="enum" name="mode">
            <enum name="initial" value="1"/>
            <enum name="image" value="2"/>
        </attr>
    </declare-styleable>
</resources>